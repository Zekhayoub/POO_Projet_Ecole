<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="school.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            
            <Image
                Source="ecole.png"
                HeightRequest="185"
                VerticalOptions="Center"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Bonjour, bienvenue dans votre application de création d'école virtuelle ! "
                SemanticProperties.HeadingLevel="Level1"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

            <Button 
                x:Name="cliquerici" 
                Text="cliquer ici pour commencer" 
                Clicked="Onpagedegardeclicked" 
                VerticalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
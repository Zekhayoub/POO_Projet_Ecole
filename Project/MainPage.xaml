<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projet_progra_objet.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="ecole.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Bonjour, bienvenue dans votre application de création d'école virtuelle ! "
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" /> 
            
            <Button 
                x:Name="cliquerici" 
                Text="cliquer ici pour commencer" 
                Clicked="Onpagedegardeclicked" 
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
